{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "gdp_per_capita over total_deaths(Jan-Jul)",
  "background": "seashell",
  "data": {
    "url": "https://raw.githubusercontent.com/Lok-00/FIT3179/main/owid-covid-data%20(1).csv"
  },
  "vconcat": [
    {
      "encoding": {
        "color": {
          "condition": {
            "selection": "brush",
            "title": "continent",
            "field": "continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#377eb8",
                "#a6cee3",
                "#a65628"
              ]
            }
          },
          "value": "lightgray"
        },
        "size": {
          "title": "total_deaths",
          "field": "total_deaths",
          "scale": {"domain": [0, 1000000]},
          "type": "quantitative"
        },
        "x": {
          "field": "date",
          "timeUnit": "monthdate",
          "title": "Date",
          "axis": {"format": "%b"}
        },
        "y": {
          "title": "gdp_per_capita",
          "field": "gdp_per_capita",
          "scale": {"domain": [0, 100000]},
          "type": "quantitative"
        }
      },
      "width": 350,
      "mark": "point",
      "selection": {"brush": {"encodings": ["x"], "type": "interval"}},
      "transform": [{"filter": {"selection": "click"}}]
    },
    {
      "encoding": {
        "color": {
          "condition": {
            "selection": "click",
            "field": "continent",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "value": "lightgray"
        },
        "x": {"aggregate": "count"},
        "y": {"title": "continent", "field": "continent"}
      },
      "width": 350,
      "mark": "bar",
      "selection": {"click": {"encodings": ["color"], "type": "multi"}},
      "transform": [{"filter": {"selection": "brush"}}]
    }
  ],
  "config": {}
}
